// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/typings": true,
        "**/npm-debug.log": true,
        "web/**/*.js": {
            "when": "$(basename).ts"
        },
        "web/**/*.js.map": {
            "when": "$(basename)"
        }
    }
}